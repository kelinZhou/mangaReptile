<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/black_000"
    android:paddingBottom="10dp">


    <ImageView
        android:id="@+id/layout_comic_detail_head_cover"
        android:layout_width="150dp"
        android:layout_height="0dp"
        android:layout_margin="20dp"
        app:layout_constraintDimensionRatio="h,3:4"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/layout_comic_detail_head_title"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_marginStart="20dp"
        android:layout_marginEnd="20dp"
        android:textColor="@color/white"
        android:textSize="22sp"
        app:layout_constrainedWidth="true"
        app:layout_constraintWidth_default="wrap"
        app:layout_constrainedHeight="true"
        app:layout_constraintHeight_default="wrap"
        app:layout_constraintStart_toEndOf="@id/layout_comic_detail_head_cover"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="@id/layout_comic_detail_head_cover"
        app:layout_constraintBottom_toTopOf="@id/layout_comic_detail_head_author"
        tools:text="测试asdflk;测试asdflk测试asdflk测试asdflk测试asdflk测试asdflk测试asdflk" />


    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/layout_comic_detail_head_author"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:layout_marginRight="20dp"
        android:textColor="@color/white"
        app:layout_constrainedWidth="true"
        app:layout_constrainedHeight="true"
        android:clickable="true"
        app:layout_constraintHorizontal_bias="0"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="@id/layout_comic_detail_head_title"
        app:layout_constraintTop_toBottomOf="@id/layout_comic_detail_head_title"
        tools:text="作者:全磨人 全磨人" />


    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/layout_comic_detail_head_status"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:layout_marginRight="20dp"
        android:textColor="@color/white"
        app:layout_constrainedWidth="true"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0"
        app:layout_constraintStart_toStartOf="@id/layout_comic_detail_head_title"
        app:layout_constraintTop_toBottomOf="@id/layout_comic_detail_head_author"
        tools:text="2020-05-19连载中..." />


    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/layout_comic_detail_comic_desc"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:textColor="@color/white"
        android:layout_marginTop="10dp"
        android:paddingBottom="10dp"
        android:layout_marginEnd="20dp"
        app:layout_constrainedWidth="true"
        app:layout_constraintHorizontal_bias="0"
        app:layout_constrainedHeight="true"
        app:layout_constraintHeight_default="wrap"
        tools:text="123"
        app:layout_constraintStart_toStartOf="@id/layout_comic_detail_head_cover"
        app:layout_constraintTop_toBottomOf="@id/layout_comic_detail_head_cover"
        app:layout_constraintEnd_toEndOf="parent" />

    <Button
        android:id="@+id/layout_comic_detail_head_subscribe"
        android:layout_width="0dp"
        android:layout_height="60dp"
        android:layout_marginStart="20dp"
        android:layout_marginTop="10dp"
        android:background="@drawable/shape_button_comic_subscribe"
        android:textColor="@color/white"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toLeftOf="@id/layout_comic_detail_head_read"
        app:layout_constraintTop_toBottomOf="@id/layout_comic_detail_comic_desc"
        android:text="开始订阅" />


    <Button
        android:id="@+id/layout_comic_detail_head_read"
        android:layout_width="0dp"
        android:layout_height="60dp"
        android:layout_marginTop="10dp"
        android:layout_marginEnd="20dp"
        android:background="@drawable/shape_button_comic_read"
        android:text="阅读"
        android:textColor="@color/white"
        app:layout_constraintLeft_toRightOf="@id/layout_comic_detail_head_subscribe"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@id/layout_comic_detail_comic_desc" />

</androidx.constraintlayout.widget.ConstraintLayout>
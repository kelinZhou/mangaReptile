<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/black_000"
    android:paddingBottom="20dp">


    <ImageView
        android:id="@+id/layout_comic_detail_head_cover"
        android:layout_width="150dp"
        android:layout_height="0dp"
        android:layout_margin="20dp"
        app:layout_constraintDimensionRatio="h,3:4"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/layout_comic_detail_head_title"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_margin="20dp"
        android:maxLines="3"
        android:textColor="@color/white"
        app:layout_constraintLeft_toRightOf="@id/layout_comic_detail_head_cover"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:text="测试标题测试标题测试标题测试标题测试标题测试标题测试标题测试标题测试标题测试标题测试标题测试标题" />


    <TextView
        android:id="@+id/layout_comic_detail_head_author"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:textColor="@color/white"
        app:layout_constraintEnd_toEndOf="@id/layout_comic_detail_head_title"
        app:layout_constraintHorizontal_bias="0"
        app:layout_constraintStart_toStartOf="@id/layout_comic_detail_head_title"
        app:layout_constraintTop_toBottomOf="@id/layout_comic_detail_head_title"
        tools:text="作者:全磨人" />


    <TextView
        android:id="@+id/layout_comic_detail_head_status"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:textColor="@color/white"
        app:layout_constraintEnd_toEndOf="@id/layout_comic_detail_head_title"
        app:layout_constraintHorizontal_bias="0"
        app:layout_constraintStart_toStartOf="@id/layout_comic_detail_head_title"
        app:layout_constraintTop_toBottomOf="@id/layout_comic_detail_head_author"
        tools:text="已完结" />


    <TextView
        android:id="@+id/layout_comic_detail_comic_desc"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_margin="20dp"
        android:textColor="@color/white"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@id/layout_comic_detail_head_cover"
        tools:text="测试内容alskdjfklasdjfklasjdfklasdfjaslksdjfklasjdfklasjdfklajsdklfasdf" />

    <Button
        android:id="@+id/layout_comic_detail_head_subscribe"
        android:layout_width="0dp"
        android:layout_height="60dp"
        android:layout_marginStart="20dp"
        android:layout_marginTop="20dp"
        android:background="@drawable/shape_button_comic_subscribe"
        android:textColor="@color/white"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toLeftOf="@id/layout_comic_detail_head_read"
        app:layout_constraintTop_toBottomOf="@id/layout_comic_detail_comic_desc"
        tools:text="取消订阅" />


    <Button
        android:id="@+id/layout_comic_detail_head_read"
        android:layout_width="0dp"
        android:layout_height="60dp"
        android:layout_marginTop="20dp"
        android:layout_marginEnd="20dp"
        android:background="@drawable/shape_button_comic_read"
        android:text="阅读"
        android:textColor="@color/white"
        app:layout_constraintLeft_toRightOf="@id/layout_comic_detail_head_subscribe"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@id/layout_comic_detail_comic_desc" />


    <TextView
        android:id="@+id/layout_comic_detail_tabs_hint"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:layout_marginBottom="20dp"
        android:text="连载"
        android:textColor="@color/white"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@id/layout_comic_detail_head_read" />


    <com.neuifo.mangareptile.widget.flowlayout.FlowLayout
        android:id="@+id/layout_comic_detail_tabs"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="20dp"
        android:layout_marginTop="20dp"
        android:layout_marginEnd="20dp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@id/layout_comic_detail_tabs_hint"
        app:lineSpacing="10dp"
        app:tagLayout="@layout/layout_tag_pages"
        app:tagTextViewId="@id/layout_tag_industry_text"
        tools:tags="JAVA, 产品, JAVA, 2, JAVA, 产品, JAVA, Android" />


    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="评论"
        android:layout_marginTop="20dp"
        android:textColor="@color/white"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@id/layout_comic_detail_tabs" />


</androidx.constraintlayout.widget.ConstraintLayout>
<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="10dp"
    tools:background="@color/black_000">


    <ImageView
        android:id="@+id/item_comic_cover"
        android:layout_width="match_parent"
        android:layout_height="100dp"
        android:scaleType="centerCrop"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:src="@drawable/loading_02" />


    <TextView
        android:id="@+id/iv.item_comic_title"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_marginLeft="5dp"
        android:layout_marginRight="5dp"
        android:maxLines="1"
        android:textColor="@color/white"
        android:textSize="16sp"
        app:layout_constraintBottom_toBottomOf="@id/item_comic_cover"
        app:layout_constraintEnd_toEndOf="@id/item_comic_cover"
        app:layout_constraintStart_toStartOf="@id/item_comic_cover"
        tools:text="测试标题测试标题测试标题测试标题测试标题测试标题" />

    <TextView
        android:id="@+id/item_comic_update_chapter"
        android:layout_width="wrap_content"
        android:layout_height="0dp"
        android:layout_marginTop="8dp"
        app:layout_constraintHorizontal_bias="0"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@id/item_comic_cover"
        tools:text="更新到  31话"
        tools:textColor="@color/white" />


    <TextView
        android:id="@+id/item_comic_read_chapter"
        android:layout_width="wrap_content"
        android:layout_height="0dp"
        android:layout_marginTop="8dp"
        app:layout_constraintHorizontal_bias="0"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@id/item_comic_update_chapter"
        tools:text="看到  31话"
        tools:textColor="@color/white" />

</androidx.constraintlayout.widget.ConstraintLayout>